<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="30dp"
    tools:context=".ui.ForgotPasswordAct">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Forgot Password"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/marlinsoftbasic_regular"/>


    <TextView
        android:id="@+id/lbltxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="@string/lblforgotPass"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/marlinsoftbasic_regular"/>


    <EditText
        android:id="@+id/emailForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg_flatcorner"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/blue1"
        android:textSize="20sp"
        android:visibility="visible"/>


    <Button
        android:id="@+id/btnsendForgot"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/btnborder"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/marlinsoftbasic_regular"
        android:text="Send email"
        android:layout_marginVertical="100dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textStyle="bold" />

</LinearLayout>