<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for the rectangle -->
    <solid android:color="#F8F9F9" />

    <!-- Border color and width for the stroke -->
    <stroke
        android:color="@color/blue"
        android:width="2dp" />  <!-- Set your desired stroke width here -->

    <!-- Padding for the content inside the rectangle -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />

</shape>
